{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-opengl",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "src/*.cpp",
        "-o",
        "app",
        "-framework",
        "OpenGL",
        "-framework",
        "GLUT"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build all OpenGL source files using clang++ on macOS"
    }
  ]
}
